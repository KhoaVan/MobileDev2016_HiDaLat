<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.hidalat.activities.MapsActivity">
    <fragment
        android:id="@+id/my_maps_act_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment">
    </fragment>
    <FrameLayout
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@color/trans_highlight_control"
            android:text="@string/action_direct"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_height" />
    </FrameLayout>
</FrameLayout>
