<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.hidalat.activities.DetailPlaceActivity">
    <ScrollView
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingBottom="88dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image"
                android:src="@drawable/icon_info"
                android:scaleType="centerCrop"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/vertical_margin"
                android:paddingBottom="@dimen/vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id = "@+id/title"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/headline_text"
                    android:text="App Du Lịch tiện ích, thông tin chính xác rõ ràng"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:padding="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/head2"
                    android:text="Giới thiệu"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/content"
                    android:layout_marginTop="@dimen/vertical_margin"
                    android:text="@string/introduce_app"
                    android:textColor="@color/grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:padding="2dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Liên hệ"
                    android:textSize="5dp"
                    android:textStyle="bold"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text = "Trường ĐH Khoa Học Tự Nhiên - ĐHQG Thành Phố Hồ Chí Minh"
                    android:textSize="7dp"
                    android:textStyle="bold"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text = "Nhóm: RUPUTECH"
                    android:textSize="7dp"
                    android:textStyle="bold"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text = "Điên thoại: 0987586678"
                    android:textSize="7dp"
                    android:textStyle="bold"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text = "Email: rupytech@gmail.com"
                    android:textSize="7dp"
                    android:textStyle="bold"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</FrameLayout>
